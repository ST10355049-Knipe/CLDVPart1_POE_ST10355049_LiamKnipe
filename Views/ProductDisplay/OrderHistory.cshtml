@using System.Globalization
@model List<orderTable>

<h2 class="mb-4">Your Order History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.OrderDate</td>
                <td>@order.TotalAmount.ToString("C", new CultureInfo("en-ZA"))</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>



@{
    ViewData["Title"] = "User Login";
}

<link rel="stylesheet" href="path/to/your/custom-login-styles.css">

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <center>
                                <img width="150px" src="~/Images/login.png" alt="User Icon" />
                            </center>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <center>
                                <h3>Member Login</h3>
                            </center>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <hr>
                        </div>
                    </div>
                    <form method="post" action="@Url.Action("Login", "Account")">
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control" type="email" name="email" placeholder="Email" />
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input class="form-control" type="password" name="password" placeholder="Password" />
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-lg">Login</button>
                                </div>
                                <div class="form-group">
                                    <a href="@Url.Action("SignUp", "Account")" class="btn btn-info btn-lg">Sign Up</a>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
            <a href="@Url.Action("Index", "Home")"><< Back to Home</a><br><br>
        </div>
    </div>
</div>
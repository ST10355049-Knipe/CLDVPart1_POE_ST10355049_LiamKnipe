                    </<div>
                    <div>
                        <textarea id="message" name="message" rows="4" required></textarea>
                    </div>
                    <button type ="submit">Submit</button>
                </form>
            </section>

        <div style="margin-top: 20px;"></div>


            <section id="contact-details">
